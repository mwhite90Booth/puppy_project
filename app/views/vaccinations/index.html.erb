<div>
  <div>
    <h1>
      List of all vaccinations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new vaccination
    </h2>

    <form action="/insert_vaccination" method="post">
      <div>
        <label for="dog_id_box">
          Dog
        </label>

        <input type="text" id="dog_id_box" name="query_dog_id">
      </div>

      <div>
        <label for="vaccintation_name_box">
          Vaccintation name
        </label>

        <input type="text" id="vaccintation_name_box" name="query_vaccintation_name">
      </div>

      <div>
        <label for="given_date_box">
          Given date
        </label>

        <input type="datetime-local" id="given_date_box" name="query_given_date">
      </div>

      <div>
        <label for="expiration_date_box">
          Expiration date
        </label>

        <input type="datetime-local" id="expiration_date_box" name="query_expiration_date">
      </div>

      <button>
        Create vaccination
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dog
        </th>

        <th>
          Vaccintation name
        </th>

        <th>
          Given date
        </th>

        <th>
          Expiration date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_vaccinations.each do |a_vaccination| %>
      <tr>
        <td>
          <%= a_vaccination.id %>
        </td>

        <td>
          <%= a_vaccination.dog_id %>
        </td>

        <td>
          <%= a_vaccination.vaccintation_name %>
        </td>

        <td>
          <%= a_vaccination.given_date %>
        </td>

        <td>
          <%= a_vaccination.expiration_date %>
        </td>

        <td>
          <%= time_ago_in_words(a_vaccination.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_vaccination.updated_at) %> ago
        </td>

        <td>
          <a href="/vaccinations/<%= a_vaccination.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
